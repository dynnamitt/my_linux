# rm -f ~/.Xdefaults && ln -s ~/.my_linux/Xresources ~/.Xdefaults
# rm -f ~/.xinitrc && ln -s ~/.my_linux/xinitrc ~/.xinitrc
# rm -f ~/.xbindkeyrc && ln -s ~/.my_linux/xbindkeyrc ~/.xbindkeyrc
